<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_menu"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="#FFFFFF">


    <ImageView
        android:id="@+id/gambar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="15dp"
        android:layout_weight="1"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/ip11pro" />

    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/gambar"
        android:text="Apple Iphone 11 Pro"
        android:textSize="10pt"
        android:layout_marginBottom="2dp"
        android:textColor="#000000"
        />


    <TextView
        android:id="@+id/screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/gambar"
        android:layout_below="@id/nama"
        android:layout_marginBottom="2dp"
        android:text="Screen: 6.5, 1242x2688 pixels"
        android:textSize="5pt"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/gambar"
        android:layout_below="@id/screen"
        android:layout_marginBottom="2dp"
        android:text="Camera: Triple 12 MP"
        android:textSize="5pt"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/memory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/gambar"
        android:layout_below="@id/camera"
        android:layout_marginBottom="2dp"
        android:text="Memory: 4GB RAM"
        android:textSize="5pt"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/chipset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/gambar"
        android:layout_below="@id/memory"
        android:layout_marginBottom="2dp"
        android:text="Chipset: Apple A13 Bionic"
        android:textSize="5pt"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/gambar"
        android:layout_below="@id/chipset"
        android:layout_marginBottom="2dp"
        android:text="Battery: 3969mAh Li-Ion"
        android:textSize="5pt"
        android:textColor="#000000"/>





</RelativeLayout>